<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Пол:"
            />
        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbMale"
                style="@style/defaultRadioButton"
                android:text="male" />

            <RadioButton
                android:id="@+id/rbFemale"
                style="@style/defaultRadioButton"
                android:text="female" />

            <RadioButton
                android:id="@+id/rbGenderless"
                style="@style/defaultRadioButton"
                android:text="genderless" />

            <RadioButton
                android:id="@+id/rbGenderUnknown"
                style="@style/defaultRadioButton"
                android:text="@string/string_unknown" />

            <RadioButton
                android:id="@+id/rbGenderAll"
                style="@style/defaultRadioButton"
                android:text="all" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Тип:"
            />
        <RadioGroup
            android:id="@+id/rgSpecies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAlien"
                style="@style/defaultRadioButton"
                android:text="alien" />

            <RadioButton
                android:id="@+id/rbHuman"
                style="@style/defaultRadioButton"
                android:text="human" />

            <RadioButton
                android:id="@+id/rbSpeciesUnknown"
                style="@style/defaultRadioButton"
                android:text="unknown" />

            <RadioButton
                android:id="@+id/rbSpeciesAll"
                style="@style/defaultRadioButton"
                android:text="all" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Статус:"
            />
        <RadioGroup
            android:id="@+id/rgStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAlive"
                style="@style/defaultRadioButton"
                android:text="alive" />

            <RadioButton
                android:id="@+id/rbDead"
                style="@style/defaultRadioButton"
                android:text="dead" />

            <RadioButton
                android:id="@+id/rbStatusUnknown"
                style="@style/defaultRadioButton"
                android:text="unknown" />

            <RadioButton
                android:id="@+id/rbStatusAll"
                style="@style/defaultRadioButton"
                android:text="all" />

        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>